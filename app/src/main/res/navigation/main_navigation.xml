<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.storyapp.ui.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_storiesFragment"
            app:destination="@id/storiesFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="LoginFragment"
            app:argType="string"
            android:defaultValue="default login" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.storyapp.ui.register.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" />
    <fragment
        android:id="@+id/storiesFragment"
        android:name="com.example.storyapp.ui.stories.StoriesFragment"
        android:label="fragment_stories"
        tools:layout="@layout/fragment_stories" >
        <argument
            android:name="token"
            android:defaultValue=""
            app:argType="string" />
        <action
            android:id="@+id/action_storiesFragment_to_storyDetailFragment"
            app:destination="@id/storyDetailFragment" />
        <action
            android:id="@+id/action_storiesFragment_to_newStoryFragment"
            app:destination="@id/newStoryFragment" />
    </fragment>
    <fragment
        android:id="@+id/storyDetailFragment"
        android:name="com.example.storyapp.ui.detail.DetailFragment"
        android:label="Story Detail"
        tools:layout="@layout/fragment_detail">
        <argument
            android:name="story"
            app:argType="com.example.storyapp.data.remote.ListStoryItem" />
    </fragment>
    <fragment
        android:id="@+id/newStoryFragment"
        android:name="com.example.storyapp.ui.upload.UploadFragment"
        android:label="fragment_new_story"
        tools:layout="@layout/fragment_upload" >
        <argument
            android:name="token"
            android:defaultValue=""
            app:argType="string" />
        <action
            android:id="@+id/action_newStoryFragment_to_cameraFragment"
            app:destination="@id/cameraFragment" />
    </fragment>
    <fragment
        android:id="@+id/cameraFragment"
        android:name="com.example.storyapp.ui.camera.CameraFragment"
        android:label="fragment_camera"
        tools:layout="@layout/fragment_camera" />
</navigation>